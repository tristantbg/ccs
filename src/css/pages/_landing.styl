$s = 8rem

#logo
	svg
		position fixed
		width 28rem
		transition all 1s $kinetic
	.down-right
		bottom 'calc(50% + %s)' % $s
		right 'calc(50% + %s)' % $s
	.down-left
		bottom 'calc(50% + %s)' % $s
		left 'calc(50% + %s)' % $s
	.top-right
		top 'calc(50% + %s)' % $s
		right 'calc(50% + %s)' % $s
	.top-left
		top 'calc(50% + %s)' % $s
		left 'calc(50% + %s)' % $s

body.full
	#logo
		svg
			transition none

#message
	transition opacity 200ms ease 1s
	visibility hidden
	opacity 0
	align(vertical)
	position fixed
	text-align center
	width 100%
	font-size 1.7rem
	+below($md)
		font-size 12px
	.button
		display inline-block
		margin-top 2.5rem
		padding 0.3em 0.3em 0.4em
		border 1px solid
	h1, h2
		font-size 9rem
		+below($md)
			font-size 10rem
			+landscape()
				font-size 12rem

#footer
	transition opacity 200ms ease 1s
	visibility hidden
	opacity 0
	position fixed
	left 0
	bottom 1.5em
	text-align center
	width 100%
	padding 0 50rem
	font-size 1.7rem
	+below($md)
		font-size 12px
		padding 0 5rem
		bottom 20rem
	.button
		display inline-block
		margin-top 2.5rem
		padding 0.3em 0.3em 0.4em
		border 1px solid
	h1, h2
		font-size 9rem

$o = 15rem

.loaded
	#logo
		svg
			width 80rem
		.down-right
			bottom 'calc(100% - %s)' % $o
			right 'calc(100% - %s)' % ($o*3)
		.down-left
			bottom 'calc(100% - %s)' % $o
			left 'calc(100% - %s)' % ($o*3)
		.top-right
			top 'calc(100% - %s)' % $o
			right 'calc(100% - %s)' % ($o*3)
		.top-left
			top 'calc(100% - %s)' % $o
			left 'calc(100% - %s)' % ($o*3)
	#message, #footer
		opacity 1
		visibility visible