webfont('GerstnerProgrammFSLMedium', 'GerstnerProgrammFSLMedium')

text()
	font-family GerstnerProgrammFSLMedium, Times New Roman, serif

// Main font styles

::selection
	background alpha($secondary, 0.5)

::-moz-selection
	background alpha($secondary, 0.5)

body,html
	-webkit-text-size-adjust 100%

html
	font-size 1vh
	+below($md)
		font-size 0.7vmin

body
	text()
	font-size $normal
	line-height 1
	// text-rendering optimizeLegibility
	font-smoothing()

p
	line-height inherit
	&:not(:last-child)
		margin-bottom 1em

.uppercase
	text-transform uppercase

.text-center
	text-align center
